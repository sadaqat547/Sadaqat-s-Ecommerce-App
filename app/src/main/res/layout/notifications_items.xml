<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationbackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/notificationsnotread">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notificationImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/copy"
        app:civ_border_color="#D3D3D3"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notificationIcon"
        android:layout_width="26dp"
        android:layout_height="28dp"
        android:elevation="10dp"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/notificationImage"
        app:layout_constraintEnd_toEndOf="@+id/notificationImage" />

    <TextView
        android:id="@+id/notificationsData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="DARAZ ONLINE SHOPPING was live: Who says modesty can,t be trendy? Join us with Hafsa Lodi, author of Daraz "
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notificationImage"
        app:layout_constraintTop_toTopOf="@+id/notificationImage"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/notificationstime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Just now"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationImage"
        app:layout_constraintStart_toEndOf="@+id/notificationIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>